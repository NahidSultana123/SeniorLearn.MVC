@model SeniorLearnV3.Areas.Member.Models.Home.EditProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<h2>Update Profile</h2>

<form asp-action="EditProfile" method="post">
    <div class="form-group">
        <label for="FirstName"><strong>First Name</strong></label>
        <input type="text" class="form-control w-50" " id="FirstName" name="FirstName" value="@Model.FirstName" required />
    </div>

    <div class="form-group">
        <label for="LastName"><strong>Last Name</strong></label>
        <input type="text" class="form-control w-50" " id="LastName" name="LastName" value="@Model.LastName" required />
    </div>

    <!-- Hidden field to pass the Id -->
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group d-flex mt-3">
        <button type="submit" class="btn btn-primary mr-2">Save Changes</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
    </div>

</form>