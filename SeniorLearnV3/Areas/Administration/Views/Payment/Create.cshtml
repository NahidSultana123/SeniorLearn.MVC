@model SeniorLearnV3.Areas.Administration.Models.Payment.Create

@{
    ViewData["Title"] = "Record Payment";
}

<h4>Record Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="PaymentMethodId" class="control-label">Payment Method</label>
                <select asp-for="PaymentMethodId" class="form-select" asp-items="@Model.PaymentMethods"></select>
            </div>


            <div class="form-group ">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
  
            
            <div class="form-group">
                <label asp-for="PaymentDate" class="control-label">Payment Date</label>
                <input asp-for="PaymentDate" class="form-control" type="date" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>


            <div class="form-group mb-4">
                <label asp-for="Approved" class="control-label">Approved</label>
                <input asp-for="Approved" class="form-check-input" type="checkbox" />
                <span asp-validation-for="Approved" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="javascript:window.history.back();" class="btn btn-secondary">Go Back</a>
            </div>

            <input type="hidden" asp-for="MemberId" />
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/administration.payment.create.js"></script>
}